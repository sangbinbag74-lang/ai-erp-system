# ERPNext AI System Frontend - Environment Variables

# API 서버 URL
VITE_API_URL=http://localhost:8000
# Production: https://erpnext-ai-backend.railway.app

# 애플리케이션 설정
VITE_APP_NAME=ERPNext AI System
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=AI 기반 차세대 ERP 시스템

# 개발 모드 설정
VITE_DEV_MODE=true
VITE_DEBUG=true

# 기능 플래그
VITE_ENABLE_AI_COPILOT=true
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_OFFLINE_MODE=false

# 외부 서비스 설정
VITE_ANALYTICS_ID=
VITE_SENTRY_DSN=
VITE_HOTJAR_ID=

# 소셜 로그인 (선택사항)
VITE_GOOGLE_CLIENT_ID=
VITE_MICROSOFT_CLIENT_ID=

# 파일 업로드 설정
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,csv

# UI 설정
VITE_DEFAULT_THEME=light
VITE_DEFAULT_LANGUAGE=ko
VITE_ITEMS_PER_PAGE=20

# 캐싱 설정
VITE_CACHE_TTL=300000
VITE_ENABLE_SERVICE_WORKER=true

# 보안 설정
VITE_ENABLE_CSP=true
VITE_TRUSTED_DOMAINS=localhost,vercel.app,railway.app