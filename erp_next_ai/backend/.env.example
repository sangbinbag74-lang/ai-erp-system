# ERPNext AI System - Environment Variables

# 애플리케이션 설정
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=your-secret-key-here
API_VERSION=v1
LOG_LEVEL=info

# 데이터베이스 설정
DATABASE_URL=postgresql://user:password@localhost:5432/erpnext_ai
# Railway에서는 자동으로 제공: ${{ Postgres.DATABASE_URL }}

# Redis 설정 (캐시 및 세션)
REDIS_URL=redis://localhost:6379/0
# Railway에서는 자동으로 제공: ${{ Redis.REDIS_URL }}

# AI API 설정
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# CORS 설정
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-frontend-domain.vercel.app

# JWT 설정
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# 이메일 설정 (선택사항)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_USE_TLS=True

# 파일 업로드 설정
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_FOLDER=/tmp/uploads

# AWS S3 설정 (프로덕션용)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=ap-northeast-2
AWS_BUCKET_NAME=your-bucket-name

# 모니터링 및 로깅
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_ENABLED=False
JAEGER_ENABLED=False

# 속도 제한
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# 보안 설정
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=lax

# 백그라운드 작업
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# 개발 설정
DEV_RELOAD=True
DEV_PORT=8000